<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:dither="true" >
    
    <!-- Button in default mode -->
    <item 
        android:state_pressed="false"
        android:state_focused="false"
        android:state_enabled="true" >
        
		<shape
		    android:shape="rectangle"
		    android:dither="true"
		    android:useLevel="true" >
		    
		    <corners
		        android:topLeftRadius="10dp"
		        android:topRightRadius="10dp"
		        android:bottomLeftRadius="10dp"
		        android:bottomRightRadius="10dp" />
		    
		    <gradient 
		        android:startColor="@color/buttonGradient2Color"
		        android:endColor="@color/buttonGradient1Color"
		        android:angle="90"
		        android:type="linear" />
		    
		    <padding
		        android:left="10dp"
		        android:right="10dp"
		        android:top="25dp"
		        android:bottom="25dp" />
		    
			<stroke
			    android:width="2px"
			    android:color="@color/buttonStrokeColor" />
			
		</shape>
    </item>
    
        
    <!-- Button in Pressed mode -->
    
    <item 
        android:state_pressed="true"
        android:state_focused="false"
        android:state_enabled="true" >
        
		<shape
		    android:shape="rectangle"
		    android:dither="true"
		    android:useLevel="true" >
		    
		    <corners
		        android:topLeftRadius="10dp"
		        android:topRightRadius="10dp"
		        android:bottomLeftRadius="10dp"
		        android:bottomRightRadius="10dp" />
		    
		    <gradient 
		        android:startColor="@color/buttonGradient2Color"
		        android:endColor="@color/buttonGradient2Color"
		        android:angle="90"
		        android:type="linear" />
		    
		    <padding
		        android:left="10dp"
		        android:right="10dp"
		        android:top="5dp"
		        android:bottom="5dp" />
		    
			<stroke
			    android:width="2px"
			    android:color="@color/buttonStrokeColor" />
			
		</shape>
    </item>
    
    <!-- Button in Focus mode -->
    
    <item 
        android:state_pressed="false"
        android:state_focused="true"
        android:state_selected="true"
        android:state_enabled="true" >
        
		<shape
		    android:shape="rectangle"
		    android:dither="true"
		    android:useLevel="true" >
		    
		    <corners
		        android:topLeftRadius="10dp"
		        android:topRightRadius="10dp"
		        android:bottomLeftRadius="10dp"
		        android:bottomRightRadius="10dp" />
		    
		    <gradient 
		        android:startColor="@color/buttonGradient2Color"
		        android:endColor="@color/buttonGradient1Color"
		        android:angle="90"
		        android:type="linear" />
		    
		    <padding
		        android:left="10dp"
		        android:right="10dp"
		        android:top="5dp"
		        android:bottom="5dp" />
		    
			<stroke
			    android:width="2px"
			    android:color="@color/buttonStrokeColor" />
			
		</shape>
    </item>
    
</selector>
